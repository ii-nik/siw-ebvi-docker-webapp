version: "3"
services:
  {{user}}:
    build: ./app
    container_name: app-{{user}}
    links:
      - db
    networks:
      - 'frontened'
      - 'backend'

  db:
    image: mysql:8
    command: --default-authentication-plugin=caching_sha2_password
    container_name: db-{{user}}
    environment:
      MYSQL_ROOT_PASSWORD: root
    volumes:
      - ./db:/docker-entrypoint-initdb.d/:ro
    networks:
      - 'backend'

networks:
  frontend:
    external: true
  backend:
    external: true
